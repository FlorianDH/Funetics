<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintVertical_bias="0.0"
    android:background="#ABABAB">

    <TextView
        android:id="@+id/titel"
        android:layout_width="527dp"
        android:layout_height="153dp"
        android:paddingLeft="50dp"
        android:text="Funatics"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="450dp"
        android:layout_height="320dp"
        android:layout_below="@+id/titel"
        android:layout_alignLeft="@+id/titel"
        android:paddingLeft="50dp"
        app:srcCompat="@drawable/home" />

    <TextView android:id="@+id/labelGroep"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:text="Selecteer groep" />

    <Spinner
        android:id="@+id/spinnerGroep"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/labelGroep"
        android:layout_alignLeft="@+id/labelGroep"
        android:layout_marginTop="20dp"/>

    <TextView android:id="@+id/labelKind"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerGroep"
        android:layout_alignLeft="@+id/spinnerGroep"
        android:layout_marginTop="20dp"
        android:text="Selecteer kind" />

    <Spinner
        android:id="@+id/spinnerKind"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/labelKind"
        android:layout_alignLeft="@+id/labelKind"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/buttonBeheren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beheren"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="100dp"
        android:padding="50dp"
        android:onClick="goBeheren_onClick"/>
    <Button
        android:id="@+id/buttonVolgende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volgende"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="100dp"
        android:background="#8226ff00"
        android:padding="50dp"
        android:onClick="goDetail_onClick"/>
</RelativeLayout>

</android.support.constraint.ConstraintLayout>